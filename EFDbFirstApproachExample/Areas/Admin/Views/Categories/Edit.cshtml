@model EFDbFirstApproachExample.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}


<div class="container-fluid">
    <h2>Edit Brand</h2>
    <div class="row">
        <div class="col-md-2">
            <form action="@Url.Action("Edit","Categories")" method="post" class="form-inline">
                <div class="form-group">
                    <input class="form-control" type="text" name="CategoryName" value="@Model.CategoryName" />
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                </div>
                <div class="form-group ml-2">
                    <input class="btn btn-primary" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>