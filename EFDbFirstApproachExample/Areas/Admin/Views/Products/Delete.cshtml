@model EFDbFirstApproachExample.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}
<div class="container-fluid">
    <h2>Delete Product</h2>

    <div class="row">
        <div class="col-md-2">
            <table class="table table-striped">
                <tr>
                    <td>Product Name</td>
                    <td>@Model.ProductName</td>
                </tr>
                <tr>
                    <td>Product Price</td>
                    <td>@Model.Price</td>
                </tr>
            </table>
        </div>
    </div>


    <h4>Are you sure you want to delete this product?</h4>
    <form action="@Url.Action("Delete","Products", new { Area = "Admin" })" method="POST">
        <a class="btn btn-danger" href="@Url.Action("Index","Products",new { Area = "Admin" })">NO</a>
        <input class="btn btn-success" type="submit" value="YES" />

    </form>

 
</div>