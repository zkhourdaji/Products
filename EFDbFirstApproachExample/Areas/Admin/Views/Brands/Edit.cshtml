@model EFDbFirstApproachExample.Models.Brand
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <h2>Edit Brand</h2>
    <div class="row">
        <div class="col-md-2">
            <form action="@Url.Action("Edit","Brands")" method="post" class="form-inline">
                <div class="form-group">
                    <input class="form-control" type="text" name="BrandName" value="@Model.BrandName" />
                    <input type="hidden" name="BrandID" value="@Model.BrandID" />
                </div>
                <div class="form-group ml-2">
                    <input class="btn btn-primary" type="submit" />
                </div>
            </form>
        </div>
    </div>
  
</div>