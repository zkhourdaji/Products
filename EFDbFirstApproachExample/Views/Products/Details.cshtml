@model EFDbFirstApproachExample.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid">

    <h2>Details</h2>
    <div class="row">
        <div class="col-md-4">
            <table class="table table-striped">

                <tr>
                    <th>Product ID</th>
                    <td>@Model.ProductID</td>
                </tr>
                <tr>
                    <th>Product Name</th>
                    <td>@Model.ProductName</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>@Model.Price</td>
                </tr>
                <tr>
                    <th>Date of purchase</th>
                    <td>@Model.DateOfPurchase</td>
                </tr>
                <tr>
                    <th>Availability status</th>
                    <td>@Model.AvailabilityStatus</td>
                </tr>
                <tr>
                    <th>Brand Name</th>
                    <td>@Model.Brand.BrandName</td>
                </tr>
                <tr>
                    <th>Category Name</th>
                    <td>@Model.Category.CategoryName</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>@Model.Active</td>
                </tr>
            </table>
        </div>
    </div>


    <a href="@Url.Action("Index", "Products", new { Area=""})" class="btn btn-primary">Back to products</a>
</div>