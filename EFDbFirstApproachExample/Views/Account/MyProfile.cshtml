@model EFDbFirstApproachExample.Identity.ApplicationUser

@{
    ViewBag.Title = "MyProfile";
}

<div class="container-fluid">
    <h2>MyProfile</h2>

    <table class="table table-striped">
        <tr>
            <th>Username</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Birthday</th>
            <td>@Model.Birthday.Value.Date.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>@Model.Country</td>
        </tr>
    </table>

    <a href="@Url.Action("Index","Home")">Back</a>
</div>